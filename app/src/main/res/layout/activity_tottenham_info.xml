<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sixtynine"
    tools:context=".TottenhamInfoActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="420dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/tottenhamlogo"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-179dp" />

    <TextView
        android:id="@+id/tottenhamfc"
        android:layout_width="500dp"
        android:layout_height="88dp"
        android:text="Tottenham F.C."
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Founding year/Founder/s: 1882/Bobby Buckle."
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stadium: Tottenham Hotspur Stadium."
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Premier League/Champions League Titles: PL 2 times / CL - 0 times."
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Manager: Mauricio Pochettino."
        android:textSize="25dp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Players Roster" />
</LinearLayout>