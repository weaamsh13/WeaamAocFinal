<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sixtynine"
    android:orientation="vertical"
    tools:context=".ArsenalInfoActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="420dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/arsenallogo" />

    <TextView
        android:id="@+id/arsenalfc"
        android:layout_width="500dp"
        android:layout_height="88dp"
        android:text="Arsenal F.C."
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Founding year/Founder/s: 1886/David Danskin."
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stadium: Emirates Stadium."
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Premier League/Champions League Titles: PL - 13 times / CL - 0 times."
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Manager: Unai Emery."
        android:textSize="25dp"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Players Roster" />
</LinearLayout>