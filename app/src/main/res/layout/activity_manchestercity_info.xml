<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sixtynine"
    android:orientation="vertical"
    tools:context=".ManchestercityInfoActivity">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="420dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/mclogopng" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="500dp"
        android:layout_height="88dp"
        android:text="Manchester City F.C."
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Founding year/Founder/s: 1880/Thomas Goodbehere."
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:text="Stadium: Etihad Stadium."
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Premier League/Champions League Titles: PL - 4 times / CL - 0 times."
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Manager: Pep Guardiola."
        android:textSize="25dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Players Roster" />
</LinearLayout>